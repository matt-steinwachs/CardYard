= form_for @deck do |f|
  - if @deck.errors.any?
    #error_explanation
      %h2= "#{pluralize(@deck.errors.count, "error")} prohibited this deck from being saved:"
      %ul
        - @deck.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :deck_data
    = f.text_area :deck_data
  .actions
    = f.submit 'Save'
