= form_for @zone do |f|
  - if @zone.errors.any?
    #error_explanation
      %h2= "#{pluralize(@zone.errors.count, "error")} prohibited this zone from being saved:"
      %ul
        - @zone.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :game
    = f.text_field :game
  .field
    = f.label :zone_data
    = f.text_area :zone_data
  .actions
    = f.submit 'Save'
