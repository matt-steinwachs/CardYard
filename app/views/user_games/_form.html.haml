= form_for @user_game do |f|
  - if @user_game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user_game.errors.count, "error")} prohibited this user_game from being saved:"
      %ul
        - @user_game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :game
    = f.text_field :game
  .actions
    = f.submit 'Save'
