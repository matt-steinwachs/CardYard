= form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :creator
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :game_data
    = f.text_area :game_data
  .actions
    = f.submit 'Save'
